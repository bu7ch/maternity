<%- if controller_name != 'sessions' %>
  <%= link_to "Se connecter", new_session_path(resource_name), class: "btn btn-primary" %><br />
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "S'inscrire", new_registration_path(resource_name), class: "btn btn-primary" %><br />
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <br /><%= link_to "Mot de passe oubliÃ© ?", new_password_path(resource_name), class: "btn btn-warning" %><br />
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <br /><%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "btn btn-warning" %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <br /><%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "btn btn-warning" %><br />
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <br /><%= link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider), class: "btn btn-warning" %><br />
  <% end -%>
<% end -%>
