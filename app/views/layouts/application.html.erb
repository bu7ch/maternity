<!DOCTYPE html>
<html>
  <head>
    <title>Kiddizy</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <link href='https://fonts.googleapis.com/css?family=Nunito:400,700' rel='stylesheet' type='text/css'>
    <%= csrf_meta_tags %>
  </head>
  <body class="background">
    <header class="navbar navbar-inverse">
      <div class="container">
        <a href="/" class="navbar-brand">Kiddizy</a>
        <ul class="menu pull-right">
          <li><a href="/blogs">Blog</a></li>
          <% if user_signed_in? %>
            <li><%= link_to "Mon compte", edit_user_registration_path %></li>
            <li><a data-method="delete" href="/users/sign_out">DÃ©connexion</a></li>
          <% else %>
            <li><a href="/users/sign_in">Connexion</a></li>
            <li><a href="/users/sign_up">Inscription</a></li>
          <% end %>
        </ul>
      </div>
    </header>
    <main class="container">
      <% if notice %>
        <p class="notice alert alert-success"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p class="alert alert-danger"><%= alert %></p>
      <% end %>
      <%= yield %>
    </main>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  </body>
</html>
